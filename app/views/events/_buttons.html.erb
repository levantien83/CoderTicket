<% if @event.user == nil || @event.published_at != nil %>
  <%= link_to new_event_ticket_path(@event) do %>
    <button class='btn btn-lg btn-block btn-danger'> BOOK NOW </button>
  <% end -%><br>
<% end -%>

<% if @event.user == current_user %>
  <h5> Owner options </h5>
    <%= link_to 'CREAT TICKET TYPES', new_event_ticket_path(@event), class: 'btn btn-lg btn-block btn-danger' %>
  <br>
  <% if @event.published_at == nil %>    
    <%= link_to 'PUBLISH NOW', event_publish_now_path(@event), class: 'btn btn-lg btn-block btn-danger' %>
  <% else %>  
    <%= link_to 'UNPUBLISH', event_unpublish_path(@event), class: 'btn btn-lg btn-block btn-danger' %>
  <% end %>
<% end %>